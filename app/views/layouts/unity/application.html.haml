!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Skill Deploy
    = csrf_meta_tags
    = csp_meta_tag
    - if user_signed_in?
      %meta{content: "#{current_user.authentication_token}", name: "user-token"}
      %meta{content: "#{current_user.email}", name: "user-email"}
    
    %link{href: "https://use.typekit.net/yke8vfo.css", rel: "stylesheet"}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'unity/application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'javascript/polyfills', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'javascript/application', 'data-turbolinks-track': 'reload'
    %meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}/
  %body
    = render "layouts/nav"
    %main
      = yield