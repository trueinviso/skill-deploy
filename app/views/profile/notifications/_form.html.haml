.align-center.forms
  .column.small-12.medium-10
    .secondary-heading
      Notifications

    = form_for user_profile, url: profile_notifications_path, method: :put do |f|
      - if user_profile.errors.any?
        #error-explanation
          %h2 #{pluralize(user_profile.errors.count, 'error')} prohibited your profile from being save:
          %ul
            - user_profile.errors.full_messages.each do |msg|
              %li= msg

      .text-field.radio-label
        = f.label :update_notifications do
          = f.check_box :update_notifications
          %span Send me updates about new products and features
      .text-field.radio-label.last
        = f.label :weekly_newsletter do
          = f.check_box :weekly_newsletter
          %span Sign me up for the weekly newsletter
      .small-12.medium-3.columns.submit-field
        = f.submit "Save"
