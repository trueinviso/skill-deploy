.notification-page--content
  .page-heading
    Notifications
  .notification-page--form
    = form_for user_profile, url: profile_notifications_path, method: :put do |_|
      = render("application/form_errors", object: user_profile)

      .notification-page--field
        %label.toggle-label
          Updates about new products and features
        = react_component("Notifications",
          { name: "user_profile[update_notifications]",
            defaultValue: user_profile.update_notifications })

      .notification-page--field
        %label.toggle-label
          Receive our weekly newsletter featuring the latest projects
        = react_component("Notifications",
          { name: "user_profile[weekly_newsletter]",
            defaultValue: user_profile.weekly_newsletter })

