.subscription
  = render "unity/subscriptions/details"
  %section.subscription__paymemnt
    %h1.h1--small Subscription details

    .subscription__paymemnt__content
      .subscription__paymemnt__content__title
        %span.subscription-text.text.-link= Unity::SubscriptionPlan.first.name
        %span.subscription-text.text $#{Unity::SubscriptionPlan.first.price}/month
      %p.subscription__paymemnt__content__description= Unity::SubscriptionPlan.first.description
    .subscription__paymemnt__total
      %span.text.subscription-text Total today
      %span.text.subscription-text $#{Unity::SubscriptionPlan.first.price}

    = form_for :subscription,
      url: [:subscription],
      method: :create,
      html: { id: "braintree-payment-form",
      "data-validate": "data-validate",
      class: "subscription__paymemnt__form",
      "no-validate": "no-validate" } do |f|

      %h3.subscription__paymemnt__form__heading Payment details

      = hidden_field_tag :authenticity_token, form_authenticity_token
      = hidden_field_tag :plan_id, Unity::SubscriptionPlan.first.gateway_id

      = render "unity/payment_method/card_details", f: f

      %p.text.-meta.-center.subscription__paymemnt__form__notice 
        All sales are final and all prices are USD.
      .subscription__paymemnt__form__submit
        = f.submit "Get started",
          data: { disable_with: "Please wait..." },
          class: "button"
