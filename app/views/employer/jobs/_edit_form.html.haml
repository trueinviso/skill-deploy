= form_for(job,
  url: employer_job_path(job),
  method: :put,
  html: { id: "braintree-payment-form",
  "data-validate": "data-validate",
  "no-validate": "no-validate" }) do |f|

  = render "project_details", f: f, job: job

  .secondary-heading
    Contact Details

  = render "contact_details", f: f

  .small-12.medium-3.columns.submit-field
    = f.submit "Save"
  .small-12.medium-3.columns.submit-field.inverted.left
    = link_to "Cancel", employer_jobs_path
