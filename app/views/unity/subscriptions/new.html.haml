.subscription
  = render "unity/subscriptions/details"
  %section.subscription__paymemnt
    %h1.new-subscription__heading Subscription details

    .subscription__info
      %h2.subscription__info__name=Unity::SubscriptionPlan.first.name
      %span.subscription__info__desc=Unity::SubscriptionPlan.first.description
    .subscription__total
      %span Total today
      %span $#{Unity::SubscriptionPlan.first.price}

    = form_for :subscription,
      url: [:subscription],
      method: :create,
      html: { id: "braintree-payment-form",
      "data-validate": "data-validate",
      class: "subscription__form",
      "no-validate": "no-validate" } do |f|

      %h3.subscription__form__heading Payment details

      = hidden_field_tag :authenticity_token, form_authenticity_token
      = hidden_field_tag :plan_id, Unity::SubscriptionPlan.first.gateway_id

      = render "unity/payment_method/card_details", f: f

      %span.subscription__form__notice All sales are final and all prices are USD.
      .submit-field
        = f.submit 'Get started',
          data: { disable_with: "Please wait..." },
          class: 'button button_theme_primary'
