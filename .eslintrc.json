{
  "extends": ["@thoughtbot/eslint-config", "plugin:prettier/recommended"],
  "plugins": ["react"],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react/prop-types": [1, { "ignore": ["children", "className", "render"] }]
  },
  "globals": {
    "React": false,
    "$": false
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["~", "./app/javascript"]]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
