{
  "extends": ["@thoughtbot/stylelint-config", "stylelint-prettier/recommended"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "selector-no-union-class-name": [
      "always",
      {
        "ignore": ["/^--(.*)$/"]
      }
    ],
    "declaration-property-unit-whitelist": {
      "font-size": ["em", "px", "rem"],
      "/^animation/": ["s"],
      "line-height": ["px", "rem"]
    }
  }
}
