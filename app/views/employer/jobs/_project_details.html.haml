- thumbnail = f.object.thumbnail_url
= react_component("FileUpload", { thumbnail: thumbnail, resource: job })

.role-company-inputs
  .job-name
    = f.label :name, "Role Title *", class: "label"
    = f.text_field :name, class: "input create-listing-page__input"

  .company-name
    = f.label :company_name, "Company Name *", class: "label"
    = f.text_field :company_name, class: "input create-listing-page__input"

= f.label :description, "Job Description *", class: "label"
= f.text_area :description, class: "text-area create-listing-page__text-area"

= f.label :job_type_ids, "Type of Creative *", class: "label"
.create-listing-page__radio-button-list
  = f.collection_radio_buttons(:job_role_ids,
    JobRole.all,
    :id,
    :name,
    { checked: job.job_roles.first&.id }) do |jr|
    = jr.radio_button(class: "create-listing-page__radio-button")
    = jr.label(class: "create-listing-page__radio-label")

= f.label :job_roles, "Type of role *", class: "label"
.create-listing-page__radio-button-list
  = f.collection_radio_buttons(:job_type_ids,
    JobType.all,
    :id,
    :name,
    { checked: job.job_types.first&.id }) do |jt|
    = jt.radio_button(class: "create-listing-page__radio-button")
    = jt.label(class: "create-listing-page__radio-label")

= f.label :job_experiences, "Preferred Experience Level *", class: "label"
.create-listing-page__radio-button-list
  = f.collection_radio_buttons(:job_experience_ids,
    JobExperience.all,
    :id,
    :name,
    { checked: job.job_experiences.first&.id }) do |jt|
    = jt.radio_button(class: "create-listing-page__radio-button")
    = jt.label(class: "create-listing-page__radio-label")

= f.label :location, "Location *", class: "label"
= f.text_field :location,
  class: "input create-listing-page__input",
  placeholder: "City and State"

= f.label :remote, "Can this role be remote? *", class: "label"
.create-listing-page__remote-options
  = f.radio_button :remote, "1", class: "create-listing-page__radio-button"
  = f.label :remote, "Yes",
    for: "job_remote_1",
    class: "create-listing-page__radio-label"

  = f.radio_button :remote, "0", class: "create-listing-page__radio-button"
  = f.label :remote, "No",
    for: "job_remote_0",
    class: "create-listing-page__radio-label"

.sub-heading.create-listing-page__sub-heading
  Links

= f.label :company_website, "Website *", class: "label"
= f.text_field :company_website,
  class: "input create-listing-page__input",
  placeholder: "http://www.website.com"

= f.label :twitter, "Twitter *", class: "label"
= f.text_field :twitter,
  class: "input create-listing-page__input",
  placeholder: "http://www.twitter.com/username"

= f.label :facebook, "Facebook *", class: "label"
= f.text_field :facebook,
  class: "input create-listing-page__input",
  placeholder: "http://www.facebook.com/username"

= f.label :instagram, "Instagram *", class: "label"
= f.text_field :instagram,
  class: "input create-listing-page__input",
  placeholder: "http://www.instagram.com/username"
