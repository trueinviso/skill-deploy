.container
  .registrations-edit
    .registration-page__content
      %h1{ :class => "registration-page__heading" }= "Create your profile"
      = form_for(current_user,
        url: profile_path,
        html: { method: :post }) do |f|

        - thumbnail = f.object.thumbnail_url
        = react_component("FileUpload", { thumbnail: thumbnail, resource: current_user, type: "user", name:"user[thumbnail_attributes][file]"})

        = render "user_profile_form", form: f
        = render "preferences_and_skills_form", form: f
        = render "skills_form", form: f
        = render "work_experience_form", form: f
        = render "social_media_links_form", form: f

        = f.submit "Save changes",
          class: "button button_theme_primary button--small"
