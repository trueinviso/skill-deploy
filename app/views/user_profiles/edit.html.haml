- @title = "Talent Profile"
.page.profile
  = render "application/account_sidebar/sidebar"
  %div.page__main
    = render "application/flash_messages", type: :page_message
    = render("application/form_errors", object: current_user)

    - if Protocols::ShowProfileOverlay.call(current_user)
      .profile__overlay
    .page__content
      = render "form", action: :put
