- if !defined?(type)
  .flash-messages#flash-messages
    - if flash.any?
      - flash.each do |name, msg|
        - if msg.present? && name != 'banner_message'
          %div{ class: "flash-message flash-message--#{name}" }
            .flash-message__content
              .flash-message__text= msg.html_safe
              %button.flash-message__close &times;

- if defined?(type) && type == :banner_message
  #banner-message{ role:"alert" }
    - if flash[:banner_message].present?
      %div{ class: "banner-message"}
        .banner-message__content
          .banner-message__text= flash[:banner_message]
          %button.banner-message__close#banner-message__close
