<!DOCTYPE html>
<html>
  <head>
    <title>Skill Deploy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% if user_signed_in? %>
      <meta content="<%= current_user.authentication_token %>" name="user-token"/>
      <meta content="<%= current_user.email %>" name="user-email"/>
    <% end %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'unity/application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
  </head>

  <body>
   <%= render "layouts/nav" %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
