= form_for(job,
  url: employer_jobs_path(job),
  html: { id: "stripe-payment-form",
  "data-validate": "data-validate",
  "no-validate": "no-validate" }) do |f|

  = render "project_details", f: f, job: job

  / pass stripe plans here
  /= react_component("SubscriptionPlans", { plans: Unity::SubscriptionPlan.all })

  = react_component("StripeInitializer", { apiKey: ENV.fetch("STRIPE_PUBLISHABLE_KEY") })

  .secondary-heading
    Contact Details

  = render "contact_details", f: f

  .small-12.medium-3.columns.submit-field.last
    = f.submit "Start a project"

%script{ src: "https://js.stripe.com/v3/" }
