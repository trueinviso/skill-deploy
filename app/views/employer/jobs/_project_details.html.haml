      JobExperience.all,
      :id,
      :name,
      { checked: job.job_experiences.first&.id }) do |jt|
      %span.form--radio-button
        = jt.radio_button({ "data-required": true, "data-validation-message": "At least one is required.", "data-value": job.job_experiences.first&.id  })
        = jt.label

.form--field.mt-35
  = f.label :job_location_ids, "Job location", class: "form--label -black -required"
  .form--radio-list.form--radio-button-list
    = f.collection_radio_buttons(:job_location_ids,
      JobLocation.all,
      :id,
      :name,
      { checked: job.job_locations.first&.id }) do |jt|
      %span.form--radio-button
        = jt.radio_button({ "data-required": true, "data-validation-message": "At least one is required.", "data-value": job.job_locations.first&.id })
        = jt.label


.form--field
  = f.label :location, "Preferred location or timezone", class: "form--label -black -required"
  = f.text_field :location,
    "data-required": "true",
    maxlength: "100",
    class: "form--input",
    placeholder: "Add..."

